- title "Home"
.container

  .well.well-registration{"align" => "center"}
    %h2 Discover good eats
    / = form_for @search, :url => search_home_index_path, :html => { :method => :post 	} do |f|
    = simple_form_for @address, :url => restaurants_path, :html => { :method => :get } do |f|
      .input-group.input-group-lg
        %span.input-group-addon
          %i.fa.fa-location-arrow
        = f.input :full_address, :label => false, :placeholder => "Enter a location", :input_html => { :id => 'address-input', :class => 'form-control input-lg' }
      %hr
        .actions
          = f.submit 'Search', :class => 'btn btn-primary btn-lg'

    / = form_for @address, :url => restaurants_path, :html => { :method => :get } do |f|
    
    /   .field
    /     = f.label :address
    /     = f.text_field :full_address
    /   %hr
    /     .actions
    /       = f.submit 'Search', :class => 'btn btn-primary btn-lg'

  .well.well-registration{"align" => "center"}
    %h2 News Feed
    - i = 0
    - @recommendations.each do |recommendation|
      %p
        %b Like:
        / %input{:type => "checkbox", :checked}
        %input{:type => "checkbox", :checked => recommendation.like ? true : nil, :disabled => true}
        / :selected => recommendation.like,
        / = recommendation.like ? "Liked" : "Didn't like"
      %p
        %b Description:
        = recommendation.description
      %p
        %b Rated by:
        / = recommendation.user
        = @friendsFound[@friendsFoundIds[i]]["name"]
        = link_to '<i class="fa fa-facebook"></i>'.html_safe, @friendsFound[@friendsFoundIds[i]]["link"]
          
      %p
        %b Restaurant:
        = recommendation.restaurant.name
        -i = i + 1
    