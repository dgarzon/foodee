/ .recModalPlaceholder
/   = render :partial => "make_rec"
%div#recModalPlaceholder
%div#friendRecModalPlaceholder
%h1 Listing restaurants

%table{:style=>"border: 1px; width: 100%"}
  %tr
    %th
    %th Name
    %th Location
    %th Review Count
    %th Yelp Rating
    %th Recommend
    / %th
    / %th

  - @restaurant['businesses'].each do |restaurant|
    %tr
      %td
        %img{:src => restaurant['businesses']['image_url']}
      %td= restaurant['name']
      %td= restaurant['location']['address']
      %td= restaurant['review_count']
      %td
        %img{:src => restaurant['rating_img_url_small']}
      / %td= link_to 'Make a recommendation', "#recModal", "data-toggle" => "modal"
      %td= link_to 'Make a recommendation  ', new_recommendation_path(:restaurant_id => restaurant['id'], :restaurant_name => restaurant['name']) , remote: true, "data-toggle" => "modal"
      %td= link_to 'View friend ratings', recommendation_path(:id => restaurant['id']) , remote: true, "data-toggle" => "modal"
      / %td= link_to 'Edit', edit_restaurant_path(restaurant)
      / %td= link_to 'Destroy', restaurant, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

/ = link_to 'New Restaurant', new_restaurant_path
