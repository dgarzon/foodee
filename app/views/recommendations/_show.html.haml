%p#notice= notice

%div{:class => "modal fade", :id => "friendRecModal", :tabindex => "-1", :role => "dialog"}
  .modal-dialog
    .modal-content
      .modal-header
        %button{ :type => "button", :class => "close",  :"data-dismiss"=> "modal" }&times;
          
        %h4.modal-title#myModalLabel Friends Recommendation
      -i = 0
      .modal-body
      
        - @recommendations.each do |recommendation|
          %p
            %b Like:
            / %input{:type => "checkbox", :checked}
            %input{:type => "checkbox", :checked => recommendation.like ? true : nil, :disabled => true}
            / :selected => recommendation.like,
            / = recommendation.like ? "Liked" : "Didn't like"
          %p
            %b Description:
            = recommendation.description
          %p
            %b Rated by:
            / = recommendation.user
            = @friendsFound[@friendsFoundIds[i]]["name"]
            = link_to '<i class="fa fa-facebook"></i>'.html_safe, @friendsFound[@friendsFoundIds[i]]["link"]
          %p
            %b Restaurant:
            = recommendation.restaurant.name
            -i = i + 1
        %hr
          %button{ :type => "button", :class => "btn btn-default", :"data-dismiss" => "modal" } Close
          %button{ :type => "button", :class => "btn btn-primary" } Save changes