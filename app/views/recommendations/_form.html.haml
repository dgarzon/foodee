/ recommedation modal
%div{:class => "modal fade", :id => "recModal", :tabindex => "-1", :role => "dialog"}
  .modal-dialog
    .modal-content
      .modal-header
        %button{ :type => "button", :class => "close",  :"data-dismiss"=> "modal" } &times;

        %h4.modal-title#myModalLabel Make a recommedation

      .modal-body
        / - if !@existingRecs.empty?
        /   %h4 Previous reviews
        / - @existingRecs.each do |recommendation|
        /   .well.recs
        /     %p
        /       %b Restaurant:
        /       = link_to recommendation.restaurant.name, restaurant_path(recommendation.restaurant)

        /     - if recommendation.pics.file?
        /       %p
        /         = image_tag recommendation.pics.url
        /     %p
        /       %b Description:
        /       = recommendation.description

        / - if !@existingRecs.empty?
        /   %hr
        %h4 New Review
        = simple_form_for @recommendation do |f|
          - if @recommendation.errors.any?
            #error_explanation
              %h2= "#{pluralize(@recommendation.errors.count, "error")} prohibited this recommendation from being saved:"
              %ul
                - @recommendation.errors.full_messages.each do |msg|
                  %li= msg

          .field
            = f.label :like
            = f.check_box :like, :disabled => true, :checked => true
          .field
            = f.label :description, "Comments(optional)"
            = f.text_field :description
          .field
            = f.label :pics
            = f.file_field :pics

          = f.hidden_field :user_id, value: current_user.id

          = f.hidden_field :restaurant_id, value: "#{params[:restaurant_id]}"

          = f.hidden_field :restaurant_name, value: "#{params[:restaurant_name]}"

          %hr
          %button{ :type => "button", :class => "btn btn-default", :"data-dismiss" => "modal" } Close
          %button{ :type => "submit", :class => "btn btn-primary", :onClick => "_gaq.push(['_trackEvent', 'Search', 'Review Added', 'From Restaurant Search']);" } Save changes
      / .modal-footer


