source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.0'

# Use sqlite3 as the database for Active Record
group :development do
  gem 'sqlite3'
end

# added for heroku, postgre
group :production do
  gem 'pg', '0.15.1'
  gem 'rails_12factor', '0.0.2'
end

# HAML
gem "haml-rails"

# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.0'

# Bootstrap 3.1.1 SASS
gem 'bootstrap-sass', '~> 3.1.1'

# Font Awesome
gem "font-awesome-rails"

# Google Web Fonts
gem 'google-webfonts'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'

# See https://github.com/sstephenson/execjs#readme for more supported runtimes
# gem 'therubyracer', platforms: :ruby

# Use jquery as the JavaScript library
gem 'jquery-rails'

# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 1.2'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

# Quiet assets in console. For better debugging.
gem 'quiet_assets', :group => :development
gem 'thin'

# Code coverage.
gem 'simplecov', :require => false, :group => :test

# Code testing.
gem 'cucumber-rails', :require => false, :group => :test
gem 'database_cleaner', :group => :test

# ERB to HAML converter.
gem "erb2haml", :group => :development

# Better forms.
gem 'simple_form'

# User registration.
gem 'devise'
gem 'omniauth'
gem 'omniauth-facebook'
gem 'koala'

# Friendly ID: Better URLs
gem 'friendly_id', '~> 5.0.0'

# Better Errors
gem 'better_errors'

# Display Tables in Console
group :development do
  gem "wirble"
  gem "hirb"
  gem "awesome_print"
end

# Annotate Models
gem 'annotate', ">=2.6.0"

# Geocoder
gem 'geocoder'

# google places API
gem 'google_places'

# Fake Data
gem 'forgery', '0.5.0'

# For managing images
gem 'paperclip'
gem 'aws-sdk'

# Use ActiveModel has_secure_password
# gem 'bcrypt-ruby', '~> 3.0.0'

# Use unicorn as the app server
# gem 'unicorn'

# Use Capistrano for deployment
# gem 'capistrano', group: :development

# Use debugger
# gem 'debugger', group: [:development, :test]

# yelpster
gem 'yelpster'

gem 'faraday', '~> 0.8.9'

gem 'foursquare2', :git => 'https://github.com/mattmueller/foursquare2.git'

gem 'rails-erd'
